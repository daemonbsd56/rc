#!/bin/sh
#
# /etc/rc.d/template: start/stop template
#

# Load daemon configuration
. /etc/conf.d/daemonconf
. /etc/rc.subr

NAME="template daemon"
PROG=/usr/bin/foo
OPTS="--background"
PIDFILE=/var/run/$PROGNAME.pid

case $1 in
	start)
		msg "Starting $NAME..."
		start_daemon $PROG $OPTS
		eval_stat
		;;
	stop)
		msg "Stopping $NAME..."
		stop_daemon $PROG
		eval_stat
		;;
	restart)
		$0 stop
		sleep 1
		$0 start
		;;
	status)
		status_daemon $PROG
		;;
	*)
		echo "usage: $0 [start|stop|restart|status]"
		;;
esac

# End of file
